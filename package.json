{
  "name": "html-report-server",
  "version": "1.0.0",
  "description": "Server for uploading, updating, and serving HTML reports with CSS styling",
  "main": "src/main.js",
  "scripts": {
    "start": "node src/main.js",
    "dev": "nodemon src/main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --testResultsProcessor=jest-junit",
    "test:specific": "jest --testNamePattern=",
    "test:file": "jest --testPathPattern=",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "express": "^4.18.2",
    "marked": "^16.0.0"
  },
  "devDependencies": {
    "axios": "^1.6.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/*.spec.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/tests/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/coverage/",
      "/test-results/"
    ],
    "verbose": true
  },
  "jest-junit": {
    "outputDirectory": "./test-results",
    "outputName": "junit.xml",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  },
  "keywords": [
    "html",
    "reports",
    "express",
    "nodejs",
    "testing",
    "jest"
  ],
  "author": "Your Name",
  "license": "MIT"
}
